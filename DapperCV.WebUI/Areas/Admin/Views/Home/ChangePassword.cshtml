@model AppUserPasswordDto
@{
    ViewData["Title"] = "Şifremi Değiştir";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-warning">
    <p>
        <strong>Uyarı</strong>Şifreniz değiştirildikten sonra otomatik olarak çıkış yaptırılacak
    </p>
    
</div>

<form asp-action="ChangePassowrd" method="post">

    <input type="hidden" asp-for="@Model.Id" />

    <div class="form-group">
        <label>Parolanız:</label>
        <input type="pasword" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Parola Tekrar:</label>
        <input type="pasword" asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-outline-primary btn-sm">Değiştir</button>
    </div>
</form>

