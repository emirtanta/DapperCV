@model AppUserUpdateModel
@{
    ViewData["Title"] = "Kullanıcı Güncelleme";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Index" method="post" enctype="multipart/form-data">
    
    <input type="hidden" asp-for="@Model.Id" />

    @* resim bölümü *@
    <div class="form-group">
        <label asp-for="@Model.ImageUrl" ></label>
        <div class="col-6">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <label>Önceki Resim</label>
                <img src="/img/@Model.ImageUrl" alt="@Model.FirstName" />
            }

            else
            {
                <div class="alert alert-light text-center">
                    Herhangi bir resim sistemde kayıtlı değil
                </div>
            }

        </div>
        <div class="col-6">
            <label>Resim Seç</label>
            <input type="file" asp-for="@Model.Picture" class="form-control-file" style="height:4rem !important;width:5rem !important" />
        </div>
    </div>

    @* ad bölümü *@
    <div class="form-group">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" class="form-conrol" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>

    @* soyad bölümü *@
    <div class="form-group">
        <label asp-for="@Model.LastName"></label>
        <input asp-for="@Model.LastName" class="form-conrol" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>

    @* email bölümü *@
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-conrol" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    @* telefon bölümü *@
    <div class="form-group">
        <label asp-for="@Model.PhoneNumber"></label>
        <input asp-for="@Model.PhoneNumber" class="form-conrol" />
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>

    @* adres bölümü *@
    <div class="form-group">
        <label asp-for="@Model.Address"></label>
        <textarea asp-for="@Model.Address" rows="5" class="form-conrol"></textarea>
        <span asp-validation-for="@Model.Address" class="text-danger"></span>
    </div>

    @* kısa açıklama bölümü *@
    <div class="form-group">
        <label asp-for="@Model.ShortDescripiton"></label>
        <textarea asp-for="@Model.ShortDescripiton" rows="5" class="form-conrol"></textarea>
        <span asp-validation-for="@Model.ShortDescripiton" class="text-danger"></span>
    </div>

    @* buton bölümü *@
    <div class="form-group">
        <button type="submit" class="btn btn-outline-primary btn-sm">Kaydet</button>
    </div>
</form>
